---
{
    PROJECTS.map((project) => (
        <article>
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            <ul> 
            {
                project.tags.map((tag) => (
                    <li>{tag}</li>
                ))
            }
            </ul>
            <img src={project.image} alt={`Screenshot of the ${project.title}`}>
        </article>
    ))
}

